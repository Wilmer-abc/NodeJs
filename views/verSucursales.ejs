<h2>Sucursales de la Empresa: <%= empresa.nombre %></h2>
<p><strong>Dirección:</strong> <%= empresa.direccion %></p>

<h3>Sucursales:</h3>

<% if (sucursales.length === 0) { %>
  <p>No hay sucursales registradas para esta empresa.</p>
<% } else { %>
  <table>
    <tr>
      <th>ID</th>
      <th>Descripción</th>
      <th>Dirección</th>
      <th>Teléfono</th>
      <th>Encargado</th>
      <th>Estado</th>
      <th>Acciones</th>
    </tr>
    <% sucursales.forEach(function(sucursal) { %>
      <tr>
        <td><%= sucursal.idSucursal %></td>
        <td><%= sucursal.descripcion %></td>
        <td><%= sucursal.direccion %></td>
        <td><%= sucursal.telefono %></td>
        <td><%= sucursal.encargado %></td>
        <td><%= sucursal.estado %></td>
        <td>
          <a href="/empresa/<%= empresa.idEmpresa %>/sucursal/<%= sucursal.idSucursal %>/editar">Editar</a>
          <a href="/empresa/<%= empresa.idEmpresa %>/sucursal/<%= sucursal.idSucursal %>/eliminar">Eliminar</a>
        </td>
      </tr>
    <% }); %>
  </table>
<% } %>

<a href="/empresa/<%= empresa.idEmpresa %>/sucursal/agregar" class="button">Agregar Sucursal</a>
<br>
<a href="/empresa" class="button">Volver al listado de empresas</a>

<style>
  body {
    font-family: Arial, sans-serif;
